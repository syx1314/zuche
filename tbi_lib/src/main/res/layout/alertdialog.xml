<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alertdialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_window_noradius"
    android:gravity="center"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52.5dp">
        <TextView
            android:id="@+id/alert_cancel"
            android:text="@string/btn_cancel"
            android:textSize="12sp"
            android:textColor="@color/txt_gray_alert"
            android:background="@null"
            android:layout_marginLeft="17.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="title"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:marqueeRepeatLimit="marquee_forever"/>
    </RelativeLayout>
    <View android:layout_height="1dp" android:layout_width="fill_parent" android:background="#ececec" />
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:choiceMode="singleChoice"
        />

</LinearLayout>